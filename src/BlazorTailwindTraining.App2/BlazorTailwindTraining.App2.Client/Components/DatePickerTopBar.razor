
<div class="flex w-full justify-center">
    <div class="text-center font-semibold  flex w-64">
        <div class="flex-none">
            <button class="hover:bg-green-200 cursor-pointer p-2 m-2 rounded-2xl" @onclick="@LoadPreviousMonth">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                    <path fill-rule="evenodd" d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd"/>
                </svg>
            </button>
        </div>
        <div class="flex-1 p-2 pt-4 pb-4">
            @ChildContent
        </div>
        <div class="flex-none">
            <button id="next-month" class="hover:bg-green-200 cursor-pointer p-2 m-2 rounded-2xl" @onclick="@LoadNextMonth">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                    <path fill-rule="evenodd" d="M6.22 4.22a.75.75 0 0 1 1.06 0l3.25 3.25a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06L8.94 8 6.22 5.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd"/>
                </svg>
            </button>
        </div>
    </div>
</div>

@code {

    [Parameter] public EventCallback LoadPreviousMonth { get; set; }
    
    [Parameter] public EventCallback LoadNextMonth { get; set; }

    [Parameter, EditorRequired] public required RenderFragment ChildContent { get; set; }
}